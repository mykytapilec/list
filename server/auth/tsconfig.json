{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@shared/*": ["../../shared/*"]
    },
  },
  "include": ["src/**/*.ts", "../../shared/**/*.ts"],
  "exclude": ["node_modules"]
}
